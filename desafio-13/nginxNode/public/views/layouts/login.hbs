<html lang='es'>

<head>
    {{>head}}
</head>

<body>
    <div class="login-container">
        <section>
            <h2>Iniciar Sesión</h2>
            <div>
                <form action="/login" method="POST">
                    <label for='username'>Nombre de usuario:</label>
                    <input type='text' class="input" id='usernameInput' name='username' />
                    <label for='password'>Contraseña:</label>
                    <input type='password' class="input" id='passwordInput' name='password' />
                    <button type="submit">Iniciar Sesión</button>
                </form>
            </div>
        </section>
        <section>
            <form action="/signup" method="GET">
                <button type="submit">Ir a crear cuenta</button>
            </form>
        </section>
    </div>
    <br>
    {{> footer}}
    {{> scripts}}
</body>

</html>